{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "type" : "object",
  "properties" : {
    "ADMIN_EMAIL_ADDRESS" : {
      "description" : "System administrator notification email address",
      "type" : "string"
    },
    "DB_DSN" : {
      "default" : "mysql:host=${DB_HOST};dbname=${DB_NAME}",
      "description" : "Database name",
      "minLength" : 1,
      "type" : "string"
    },
    "DB_PASS" : {
      "description" : "Database connected user password",
      "minLength" : 1,
      "type" : "string"
    },
    "DB_SLAVE" : {
      "default" : "",
      "description" : "Database slave hosts",
      "type" : "string"
    },
    "DB_USER" : {
      "description" : "Database connected user name",
      "minLength" : 1,
      "type" : "string"
    },
    "ENCRYPT_PASS" : {
      "description" : "Encrypter passphrase.",
      "maxLength" : 16,
      "minLength" : 16,
      "type" : "string"
    },
    "GOOGLE_RECAPTCHA_SECRET_KEY" : {
      "description" : "Google reCAPTCHA secret key",
      "minLength" : 1,
      "type" : "string"
    },
    "GOOGLE_RECAPTCHA_SITE_KEY" : {
      "description" : "Google reCAPTCHA site key",
      "minLength" : 1,
      "type" : "string"
    },
    "SMTP_HOST" : {
      "description" : "SMTP server to send through",
      "minLength" : 1,
      "type" : "string"
    },
    "SMTP_OPTION" : {
      "description" : "SMTP OPTION",
      "type" : "string"
    },
    "SMTP_PASS" : {
      "description" : "SMTP password",
      "minLength" : 1,
      "type" : "string"
    },
    "SMTP_PORT" : {
      "description" : "TCP port to connect to",
      "type" : "string"
    },
    "SMTP_USER" : {
      "description" : "SMTP username",
      "minLength" : 1,
      "type" : "string"
    }
  },
  "required" : [
    "ADMIN_EMAIL_ADDRESS",
    "DB_DSN",
    "DB_USER",
    "DB_PASS",
    "ENCRYPT_PASS",
    "GOOGLE_RECAPTCHA_SITE_KEY",
    "GOOGLE_RECAPTCHA_SECRET_KEY",
    "SMTP_HOST",
    "SMTP_PORT",
    "SMTP_USER",
    "SMTP_PASS",
    "SMTP_OPTION"
  ]
}
